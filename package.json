{
    "$schema": "https://json.schemastore.org/package.json",
    "engines": {
        "node": "20.x"
    },
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && node -e \"const fs=require('fs'); if(!fs.existsSync('dist')) fs.mkdirSync('dist'); fs.cpSync('public', 'dist', {recursive:true})\"",
        "vercel-build": "npm run build && php artisan route:cache && php artisan view:cache && php artisan config:cache && php artisan event:cache",
        "deploy": "bun run build && vercel deploy --force --prod"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-echo": "^2.3.0",
        "laravel-vite-plugin": "^2.0.0",
        "pusher-js": "^8.4.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "compression": "^1.8.1",
        "express": "^5.1.0",
        "http-proxy-middleware": "^3.0.5",
        "vercel": "^33.5.3"
    }
}
